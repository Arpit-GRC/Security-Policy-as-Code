{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "BlockIAMPrivilegeEscalationForNonPrivilegedRoles",
      "Effect": "Deny",
      "Action": [
        "iam:CreateUser",
        "iam:CreateRole",
        "iam:DeleteRole",
        "iam:PutRolePolicy",
        "iam:AttachRolePolicy",
        "iam:DetachRolePolicy",
        "iam:CreatePolicy",
        "iam:CreatePolicyVersion",
        "iam:DeletePolicy",
        "iam:DeletePolicyVersion",
        "iam:UpdateAssumeRolePolicy",
        "iam:PutUserPolicy",
        "iam:AttachUserPolicy",
        "iam:DetachUserPolicy",
        "iam:CreateAccessKey",
        "iam:DeleteAccessKey"
      ],
      "Resource": "*",
      "Condition": {
        "StringNotEquals": {
          "aws:PrincipalArn": [
            "arn:aws:iam::<ACCOUNT_ID>:role/Admin-Role",
            "arn:aws:iam::<ACCOUNT_ID>:role/BreakGlass-Role"
          ]
        }
      }
    }
  ]
}
